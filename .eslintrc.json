// React - dependencies: babel-eslint, eslint, eslint-config-prettier, eslint-plugin-import, eslint-plugin-jsx-a11y, eslint-plugin-react, parcel-bundler, prettier
{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/errors",
    "plugin:jsx-a11y/errors",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/props-types": 0,
    "no-console": 1
  },
  "plugins": ["react", "import", "jsx-a11y"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
